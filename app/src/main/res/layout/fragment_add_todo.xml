<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AddTodoFragment"
    android:id="@+id/drawer_layout"
    android:background="@color/seldy2"

    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MainRelativeLayout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/action_bar"
            android:background="@color/seldy4"
            >

            <ImageButton
                android:id="@+id/back1"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/c2"
                android:backgroundTint="@color/seldy5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="self-develop"
                android:textColor="@color/seldy5"
                android:textStyle="bold"
                android:fontFamily="@font/hancom_gothic_bold"
                android:layout_marginHorizontal="100dp"
                android:textSize="17dp" />

            <ImageButton
                android:id="@+id/setting_open"
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="@color/seldy5"
                android:background="@drawable/setting" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_below="@id/action_bar"/>
        <RelativeLayout
            android:id="@+id/user_intro_RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_bar"
            >
        <TextView
            android:id="@+id/My_Diary_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="40dp"
            android:fontFamily="@font/hancom_gothic_bold"
            android:textColor="@color/seldy6"
            android:text="My Diary" />

        <ImageView
            android:id="@+id/seldy_polabear_img"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:background="@drawable/h2"
            android:layout_below="@id/My_Diary_tv"
            />
        <EditText
            android:id = "@+id/user_name_et"
            android:layout_width = "230dp"
            android:layout_height = "wrap_content"
            android:layout_toRightOf = "@id/seldy_polabear_img"
            android:text="userName"
            android:textColor="@color/gray"
            android:layout_marginTop="35dp"
            android:layout_below="@id/My_Diary_tv"
            android:textSize = "20dp"
            android:fontFamily="@font/hancom_gothic_bold"
            android:enabled="false"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="135dp"
            android:layout_toRightOf="@+id/user_name_et"
            android:backgroundTint="@color/seldy6"
            android:background="@drawable/pencil"/>
        <TextView
            android:id="@+id/intro_tx"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf = "@id/seldy_polabear_img"
            android:layout_below="@id/user_name_et"
            android:text="팩트 폭행 멈춰!!"
            android:fontFamily="@font/hancom_gothic_bold"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="14dp"
            android:textSize="13dp"
            android:maxLines="3"
            android:lineSpacingExtra="7dp"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/c3"
            android:layout_below="@id/user_name_et"
            android:layout_toRightOf="@id/intro_tx"
            />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/weekdayLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_intro_RL"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                >
                <ImageView
                    android:id="@+id/iv_calendar_previous"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/seldy_polabear_img"
                    android:src="@drawable/c2"
                    android:layout_marginRight="40dp"
                    />

                <TextView
                    android:id="@+id/tv_date_month"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/seldy_polabear_img"
                    android:layout_height="wrap_content"
                    android:text="December 2020" />
                <ImageView
                    android:id="@+id/iv_calendar_next"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/c2"
                    android:rotationY="180"
                    android:layout_below="@id/seldy_polabear_img"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="40dp"
                    />
            </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendarRecyclerView1"
            android:layout_below="@id/tv_date_month"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:lineSpacingExtra="7dp"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Todolist_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/weekdayLinearLayout"
            android:background="@drawable/round_background5"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/select_day_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/hancom_gothic_bold"
                    android:text="01"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Do List"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/hancom_gothic_bold"
                    android:textColor="@color/seldy5"
                    android:textSize="20dp"
                    />
                <ImageButton
                    android:id="@+id/addTodolist_Imgbtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/d3"
                    android:backgroundTint="@color/seldy5"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Todolist_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Image_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Todolist_LinearLayout"
            android:layout_marginTop="20dp"
            />
        <ImageButton
            android:layout_below="@id/Image_recyclerview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/under3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />
    </RelativeLayout>
    </ScrollView>
    <include
        layout="@layout/activity_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>